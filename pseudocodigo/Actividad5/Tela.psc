Algoritmo Tela
	
	Definir precio,monto Como Real;
	Definir cantidad Como Entero;
	
	Escribir "Digite el precio de un metro (Mt) de tela :";
	Leer precio;
	Escribir  "Digite la cantidad de tela por metros (Mt) :";
	Leer cantidad;
	
	monto<-precio*cantidad;
	
	Escribir "El precio de un metro de tela es:", precio; 
    Escribir "La cantidad de metros que usted requiere tiene un monto de dinero de:", monto ;
	
	
	
	
FinAlgoritmo
