Proceso PromedioTresNotas
	
	//Definicion de variables
	Definir c1,c2,c3, promedio Como Real;
	
	//Captura de valores de entrada
	Escribir "Digite el 1er Número:";
	Leer c1;
	Escribir "Digite el 2do Número:";
	Leer c2;
	Escribir "Digite el 3er Número:";
	Leer c3;
	
	//Proceso
	promedio<-(c1 + c2 + c3) /3
	
	//Salida
	Escribir " El promedio de las notas " c1 ", " c2 " y " c3 " es:",promedio;
	
FinProceso
